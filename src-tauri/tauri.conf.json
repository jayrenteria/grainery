{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Grainery",
  "version": "0.1.0",
  "identifier": "com.jay.grainery",
  "mainBinaryName": "Grainery",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": "default-src 'self'; script-src 'self' blob:; style-src 'self' 'unsafe-inline'; img-src 'self' asset: data: blob:; font-src 'self' data:; connect-src 'self' https://*; worker-src 'self' blob:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "fileAssociations": [
      {
        "ext": [
          "gwx"
        ],
        "name": "Grainery Screenplay",
        "description": "Grainery Screenplay Document",
        "role": "Editor",
        "rank": "Owner",
        "mimeType": "application/x-grainery-screenplay",
        "exportedType": {
          "identifier": "com.jay.grainery.gwx",
          "conformsTo": [
            "public.data"
          ]
        }
      }
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
